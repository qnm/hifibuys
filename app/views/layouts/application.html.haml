!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Hifibuys"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => '/'}
            %span.blue Hifi
            %span.pink Buys
          .container.nav-collapse
            %ul.nav
              -#
                - if current_user
                  %li= link_to("Sell Something", sell_path)
                - else
                  %li= link_to('Sell Something', login_path)
              %li= link_to("Contact Us", contact_path)
              -#
                - if current_user
                  %li.last
                    = "You are logged in as #{current_user.name}"
                    = link_to('Logout', logout_path)
                - else
                  %li.last= link_to('Login or sign-up', login_path)

            = render_widget :search

    .container-fluid

      .row-fluid
        .span3
          .well.sidebar-nav
            %ul.nav.nav-list
              %li.nav-header Hi-Fi
              - tag_cloud(@types,[]) do |tag|
                %li= link_to tag.name, items_path(:q => {:name_cont => tag.name})
            %ul.nav.nav-list
              %li.nav-header Manufacturers
              - tag_cloud(@manufacturers,[]) do |tag|
                %li= link_to tag.name, items_path(:q => {:name_cont => tag.name})

        .span9
          = yield
    
      %footer
        %p &copy; Hifibuys 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
