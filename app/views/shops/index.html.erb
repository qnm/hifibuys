<h1>Listing shops</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Suburb</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td><%=h shop.name %></td>
    <td><%=h shop.address %></td>
    <td><%=h shop.suburb %></td>
    <td><%=h shop.city %></td>
    <td><%=h shop.state %></td>
    <td><%=h shop.country %></td>
    <td><%= link_to 'Show', shop %></td>
    <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
    <td><%= link_to 'Destroy', shop, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New shop', new_shop_path %>